<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liste proposition</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">


    <link rel="stylesheet" href="style/style.css">

</head>

<body>

    <%- include('./partials/header.ejs') %>

        <h1>Liste des figures !</h1>
        <div class="container mt-3">
            <div class="table-container">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th class="col-2">Nom</th>
                            <th class="col-1">Difficult√©</th>
                            <th class="col-4">Description</th>
                            <th class="col-1">Modifier</th>
                            <th class="col-1">Supprimer</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% tricks.forEach(function(trick, index) { %>
                            <tr>
                                <td>
                                    <%= trick.nom %>
                                </td>
                                <td>
                                    <%= trick['level.nom'] %>
                                </td>
                                <td>
                                    <%= trick.description %>
                                </td>
                                <td class="text-center">
                                    <form action="/list-figure/<%= trick.id %>" method="get">
                                        <input type="hidden" name="trickId" value="<%= trick.id %>">
                                        <button type="submit" class="border-0"><i class="bi bi-pencil"></i></button>
                                    </form>

                                </td>
                                <td class="text-center">
                                    <form action="/list-figure/<%= trick.id %>/delete" method="post">
                                        <input type="hidden" name="trickId" value="<%= trick.id %>">
                                        <button type="submit" class="border-0"><i class="bi bi-trash"></i></button>
                                    </form>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
</body>

</html>