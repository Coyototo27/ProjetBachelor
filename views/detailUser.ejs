<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Utilisateur | Détail</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/style/style.css">
</head>

<body>

    <%- include('./partials/header.ejs') %>

        <div class="container mt-3">
            <div>
                <h1>Utilisateur</h1>
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title text-center">Nom : <%= userDetails.nom %>
                        </h4>
                        <h4 class="card-title text-center">Prénom : <%= userDetails.prenom %>
                        </h4>
                        <h4 class="card-title text-center">Email : <%= userDetails.email %>
                        </h4>
                    </div>
                </div>
            </div>
            <h1>Statistique de l'utilisateur</h1>
            <% for (let i = 0; i < tricks.length; i+=4) { %>
                <div class="row mt-3">
                    <% for (let j = i; j < Math.min(i + 4, tricks.length); j++) { %>
                        <div class="col-md-3">
                            <a href="/user/list-user/<%= userDetails.id %>/<%= tricks[j].id %>"
                                style="text-decoration: none; outline: none; color: black;">
                                <div class="card">
                                    <img class="card-img-top mx-auto"
                                        src="data:image/jpeg;base64, <%= tricks[j].image.toString('base64') %>"
                                        alt="Image de la figure" style="height: 200px; object-fit: cover;">
                                    <div class="card-body">
                                        <h5 class="card-title text-center">
                                            <%= tricks[j].nom %>
                                        </h5>
                                        <h6 class="card-title text-center">
                                            <%= tricks[j]['level.nom'] %>
                                        </h6>
                                        <p class="card-text">
                                            <%= tricks[j].description %>
                                        </p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    <% } %>
                </div>
            <% } %>
        </div>
</body>

</html>