<!-- views/home.ejs -->
<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Statistiques</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="/style/style.css">

</head>

<body>
    <%- include('./partials/header.ejs') %>
        <div class="container">
            <h1 class="mt-3">Mes statistiques</h1>
            <div class="row">
                <!-- Premier conteneur -->
                <div class="col-md-6 col-lg-4 d-flex align-items-center justify-content-end">
                    <h4 class="text-center">Taux de réussite global<br>Nombres total d'essaie(s) : <%= totalAttempts %>
                    </h4>
                </div>
                <!-- Deuxième conteneur -->
                <div class="col-md-6 col-lg-8">
                    <canvas id="myChart" width="300" height="300"></canvas>
                    <script>
                        var ctx = document.getElementById('myChart').getContext('2d');
                        var myChart = new Chart(ctx, {
                            type: 'pie',
                            data: <%- pieChartData %>,
                            options: {
                                maintainAspectRatio: false, // Désactive le maintien du rapport d'aspect
                                responsive: true // Rend le graphique responsive
                            }
                        });
                    </script>
                </div>
            </div>
            <% for (let i = 0; i < tricks.length; i+=4) { %>
                <div class="row mt-3">
                    <% for (let j = i; j < Math.min(i + 4, tricks.length); j++) { %>
                        <div class="col-md-3">
                            <a href="/stat/mes-stats/<%= tricks[j].id %>"
                                style="text-decoration: none; outline: none; color: black;">
                                <div class="card">
                                    <img class="card-img-top mx-auto"
                                        src="data:image/jpeg;base64, <%= tricks[j].image.toString('base64') %>"
                                        alt="Image de la figure" style="height: 200px; object-fit: cover;">
                                    <div class="card-body">
                                        <h5 class="card-title text-center">
                                            <%= tricks[j].nom %>
                                        </h5>
                                        <h6 class="card-title text-center">
                                            <%= tricks[j]['level.nom'] %>
                                        </h6>
                                        <p class="card-text">
                                            <%= tricks[j].description %>
                                        </p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    <% } %>
                </div>
            <% } %>
        </div>


        <!-- Nouvelle rangée pour les cartes -->





</body>


</html>