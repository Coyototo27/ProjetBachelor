<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mon Compte</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="/style/style.css">
    <style>
        /* Ajout de styles personnalisés ici */
        .custom-card {
            margin-top: 20px;
        }

        .custom-btn {
            width: 150px;
        }
    </style>
</head>

<body>

    <%- include('./partials/header.ejs') %>

        <div class="container mt-4">
            <div class="row justify-content-center mb-4">
                <div class="col-md-6">
                    <h1 class="text-center">Mon Compte</h1>
                    <div class="card custom-card">
                        <div class="card-body">
                            <form action="/user/my-account/update" method="post">
                                <% if (typeof errors !=='undefined' && errors.length> 0) { %>
                                    <div class="alert alert-danger" role="alert">
                                        <% errors.forEach(error=> { %>
                                            <p>
                                                <%= error.msg %>
                                            </p>
                                            <% }) %>
                                    </div>
                                    <% } %>
                                        <div class="form-row">
                                            <div class="form-group col">
                                                <label for="nomUser">Nom :</label>
                                                <input type="text" class="form-control" id="nomUser" name="nomUser"
                                                    value="<%= user.nom %>" required>
                                            </div>
                                            <div class="form-group col">
                                                <label for="prenomUser">Prénom :</label>
                                                <input type="text" class="form-control" id="prenomUser"
                                                    name="prenomUser" value="<%= user.prenom %>" required>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="emailUser">Email :</label>
                                            <input type="text" class="form-control" id="emailUser" name="emailUser"
                                                value="<%= user.email %>" required>
                                        </div>
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-primary custom-btn">Modifier</button>
                                        </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <h2 class="text-center">Mes figures</h2>
            <div class="table-container mt-3">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th class="col-2">Nom</th>
                            <th class="col-2">Difficulté</th>
                            <th class="col-6">Description</th>
                            <th class="col-1">Etat</th>
                            <th class="col-1">Supprimer</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% tricks.forEach(function(trick, index) { %>
                            <tr>
                                <td>
                                    <%= trick.nom %>
                                </td>
                                <td>
                                    <%= trick['level.nom'] %>
                                </td>
                                <td>
                                    <%= trick.description %>
                                </td>
                                <td class="text-center">
                                    <% if (trick.confirme) { %>
                                        <i class="bi bi-check-lg" style="color: green;"></i>
                                        <% } else { %>
                                            <i class="bi bi-clock" style="color: orange;"></i>
                                            <% } %>
                                </td>
                                <td class="text-center">
                                    <form id="suppForm_<%= trick.id %>" action="/trick/my-trick/<%= trick.id %>/delete" method="post">
                                        <% if (trick.confirme) { %>
                                            <button type="submit" class="border-0" disabled><i class="bi bi-trash"  style="color: grey;"></i></button>
                                        <% } else { %>
                                            <button type="button" class="border-0" onclick="confirmSupp('<%= trick.id %>')"><i class="bi bi-trash"></i></button>
                                            <script>
                                                function confirmSupp(trickId) {
                                                    if (confirm("Êtes-vous sûr de vouloir supprimer cette figure ?")) {
                                                        document.getElementById("suppForm_" + trickId).submit();
                                                    }
                                                }
                                            </script>
                                        <% } %>
                                        
                                    </form>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
            <div class="contaier mt-5 text-center">
                <form id="suppAccount" action="/user/my-account/delete" method="post">
                        <button type="submit" class="border-0 btn btn-danger" onclick="confirmSuppAccount()">Supprimer mon compte</button>
                        <script>
                            function confirmSuppAccount() {
                                if (confirm("Êtes-vous sûr de vouloir supprimer votre compte ?")) {
                                    document.getElementById("suppAccount").submit();
                                }
                            }
                        </script>
                </form>
            </div>
        </div>
</body>

</html>