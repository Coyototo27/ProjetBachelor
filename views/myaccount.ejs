<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mon Compte</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/style/style.css">
    <style>
        /* Ajout de styles personnalisés ici */
        .custom-card {
            margin-top: 20px;
        }

        .custom-btn {
            width: 150px;
        }
    </style>
</head>

<body>

    <%- include('./partials/header.ejs') %>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="text-center">Mon Compte</h1>
                <div class="card custom-card">
                    <div class="card-body">
                        <form action="/my-account/update" method="post">
                            <% if (typeof errors !=='undefined' && errors.length> 0) { %>
                            <div class="alert alert-danger" role="alert">
                                <% errors.forEach(error=> { %>
                                <p>
                                    <%= error.msg %>
                                </p>
                                <% }) %>
                            </div>
                            <% } %>
                            <div class="form-row">
                                <div class="form-group col">
                                    <label for="nomUser">Nom :</label>
                                    <input type="text" class="form-control" id="nomUser" name="nomUser"
                                        value="<%= user.nom %>" required>
                                </div>
                                <div class="form-group col">
                                    <label for="prenomUser">Prénom :</label>
                                    <input type="text" class="form-control" id="prenomUser" name="prenomUser"
                                        value="<%= user.prenom %>" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="emailUser">Email :</label>
                                <input type="text" class="form-control" id="emailUser" name="emailUser"
                                    value="<%= user.email %>" required>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary custom-btn">Modifier</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
